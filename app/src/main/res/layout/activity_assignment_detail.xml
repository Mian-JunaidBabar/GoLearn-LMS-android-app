<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Assignment Title -->
        <TextView
            android:id="@+id/assignment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Assignment Title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Assignment Description -->
        <TextView
            android:id="@+id/assignment_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Assignment Description"
            android:textSize="16sp" />

        <!-- Max Points -->
        <TextView
            android:id="@+id/assignment_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Total Points: 100"
            android:textSize="16sp" />

        <!-- Obtained Points -->
        <TextView
            android:id="@+id/assignment_obtained_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Obtained Points: Not submitted"
            android:textSize="16sp" />

        <!-- Button to view/download assignment -->
        <Button
            android:id="@+id/view_assignment_file_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/freshGreen"
            android:text="View/Download Assignment File" />

        <!-- File Picker Button -->
        <Button
            android:id="@+id/pick_file_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/primaryColor"
            android:text="Choose File to Submit" />

        <!-- Selected File Text -->
        <TextView
            android:id="@+id/selected_file_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="No file selected"
            android:textSize="14sp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_assignment_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/freshGreen"
            android:text="Submit Assignment" />

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/assignment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Assignment Title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/assignment_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Assignment Description"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/assignment_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Points: 10"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/assignment_total_grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Total Grade: 100"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/assignment_grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Grade: 80/100"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/assignment_submission_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:text="Submission Status: Not Submitted"
        android:textSize="16sp" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/freshGreen"
        android:text="Submit Assignment"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone" />
</LinearLayout>
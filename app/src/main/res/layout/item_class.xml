<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:radius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/class_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mathematics"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/class_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="This is your weekly math session"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/class_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By Mr. Khan"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/assignment_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Submitted"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/assignment_obtained_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points: 0"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:radius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/class_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_class"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circle_bg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/class_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mathematics"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/class_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is your weekly math session"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/class_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By Mr. Khan"
                android:textSize="13sp"
                android:textColor="#555555" />

        </LinearLayout>

        <TextView
            android:id="@+id/class_assignments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_bg"
            android:padding="6dp"
            android:text="3"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

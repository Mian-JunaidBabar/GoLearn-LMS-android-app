<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Class Description -->
        <TextView
            android:id="@+id/class_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Intro to Computer Science"
            android:textColor="#333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Teacher Name -->
        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Teacher: Mr. Junaid Ahmad"
            android:textColor="#555"
            android:textSize="16sp" />

        <!-- Total Members -->
        <TextView
            android:id="@+id/total_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="Total Members: 28"
            android:textColor="#555"
            android:textSize="16sp" />

        <!-- Submitted Summary -->
        <TextView
            android:id="@+id/submitted_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:text="Submitted Assignments: 3"
            android:textColor="#388E3C"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_assignments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:nestedScrollingEnabled="false" />
    </LinearLayout>
</ScrollView>
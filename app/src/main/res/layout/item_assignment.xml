<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:radius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/assignment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignment Title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/assignment_due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due: 12 May 2024"
                android:textColor="#777"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/assignment_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="@color/redAlert"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/assignment_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points: 10"
                android:textColor="#555"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>